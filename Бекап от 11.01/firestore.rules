rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Вспомогательная функция для проверки, является ли пользователь админом
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/artifacts/skyputh/public/data/users_v4/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/artifacts/skyputh/public/data/users_v4/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Вспомогательная функция для проверки, является ли пользователь владельцем документа
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Пользователи - только свой документ или админы могут читать/писать все
    match /artifacts/{appId}/public/data/users_v4/{userId} {
      // Чтение: только свой документ или админы
      allow read: if request.auth != null && (isOwner(userId) || isAdmin());
      
      // Создание: только аутентифицированные пользователи могут создавать свой документ
      allow create: if request.auth != null && isOwner(userId);
      
      // Обновление: только свой документ или админы
      allow update: if request.auth != null && (isOwner(userId) || isAdmin());
      
      // Удаление: только админы
      allow delete: if request.auth != null && isAdmin();
    }
    
    // Настройки - чтение для всех аутентифицированных, запись только админам
    match /artifacts/{appId}/public/settings {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdmin();
    }
    
    // Тарифы - чтение для всех аутентифицированных, запись только админам
    match /artifacts/{appId}/public/data/tariffs/{tariffId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdmin();
    }
    
    // Платежи - только свой документ или админы
    match /artifacts/{appId}/public/data/payments/{paymentId} {
      // Чтение: только свой документ или админы
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        isAdmin()
      );
      
      // Создание: только аутентифицированные пользователи могут создавать свои платежи
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      
      // Обновление: только админы
      allow update: if request.auth != null && isAdmin();
      
      // Удаление: только админы
      allow delete: if request.auth != null && isAdmin();
    }
    
    // Запрет доступа ко всем остальным документам
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

